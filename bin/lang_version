#!/bin/bash

case $1 in

php)
	echo -n "$(php -v 2>&1 | \grep --color=never -oe '^PHP\s*[0-9.]\+' | awk '{print $2}')"
	exit 0
	;;

python)
	echo -n "$(python -V 2>&1 | awk '{print $2}')"
	exit 0
	;;

ruby)
	echo -n "$(ruby -v 2>&1 | awk '{print $2}')"
	exit 0
	;;

go)
	echo -n "$(go version 2>&1 | awk '{ if ($3 ~ /^devel/) {print $3 ":" substr($4, 2)} else {print substr($3, 3)} }')"
	exit 0
	;;

rust)
	echo -n "$(rustc --version 2>&1 | cut -d' ' -f2)"
	exit 0
	;;

lua)
	echo -n "$(lua -v 2>&1 | awk '{print $2}')"
	exit 0
	;;

typescript)
	echo -n "$(tsc -v 2>&1 | awk '{print $2}')"
	exit 0
	;;

*)
	echo -n ""
	exit 0
	;;
esac
