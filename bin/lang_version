#!/bin/bash

case $1 in

php)
	if which php >/dev/null 2>&1; then
		echo -n " - $(php -v | \grep --color=never -oe '^PHP\s*[0-9.]\+' | awk '{print $2}')"
	else
		echo -n ""
	fi
	exit 0
	;;

python)
	if which python >/dev/null 2>&1; then
		echo -n " - $(python -V | awk '{print $2}')"
	else
		echo -n ""
	fi
	exit 0
	;;

ruby)
	if which ruby >/dev/null 2>&1; then
		echo -n " - $(ruby -v | awk '{print $2}')"
	else
		echo -n ""
	fi
	exit 0
	;;

go)
	if which go >/dev/null 2>&1; then
		echo -n " - $(go version | awk '{ if ($3 ~ /^devel/) {print $3 ":" substr($4, 2)} else {print substr($3, 3)} }')"
	else
		echo -n ""
	fi
	exit 0
	;;

rust)
	if which rustc >/dev/null 2>&1; then
		echo -n " - $(rustc --version | cut -d' ' -f2)"
	else
		echo -n ""
	fi
	exit 0
	;;

lua)
	if which lua >/dev/null 2>&1; then
		echo -n " - $(lua -v | awk '{print $2}')"
	else
		echo -n ""
	fi
	exit 0
	;;

typescript)
	if which tsc >/dev/null 2>&1; then
		echo -n " - $(tsc -v | awk '{print $2}')"
	else
		echo -n ""
	fi
	exit 0
	;;

*)
	echo -n ""
	exit 0
	;;
esac
